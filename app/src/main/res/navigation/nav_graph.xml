<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/moviesListFragment">

    <fragment
        android:id="@+id/moviesListFragment"
        android:name="com.news.movieshower.presentation.movies_list.MoviesListFragment"
        android:label="fragment_moviews_list"
        tools:layout="@layout/fragment_moviews_list" >
        <action
            android:id="@+id/action_moviesListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" >
            <argument
                android:name="movie_data"
                app:argType="com.news.movieshower.presentation.movies_list.MovieDisplayableData"
                app:nullable="false"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.news.movieshower.presentation.movie_details.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details">

        <argument
            app:argType="com.news.movieshower.presentation.movies_list.MovieDisplayableData"
            android:name="movie_data"
            app:nullable="false" />
    </fragment>
</navigation>